<main>
  <div id="wrapper">
    <div class="content-wrapper">
      <div class="content">
        <div class="p-4" id="login">
          <div class="form-wrapper md-elevation-8 p-8">
            <div class="logo bg-secondary"><span>F</span></div>
            <div class="title mt-4 mb-8">Acceder a fantom</div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <!-- <form name="loginForm" novalidate> !-->
              <div class="form-group mb-4">
                <!-- <input class="form-control" id="loginFormInputEmail" type="email" aria-describedby="emailHelp" placeholder=" "> !-->
                <!-- <label for="loginFormInputEmail">Cuenta de correo</label> !-->

                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                <%= f.label :email %>
              </div>
              <div class="form-group mb-4">
                <!-- <input class="form-control" id="loginFormInputPassword" type="password" placeholder="Password">
                <label for="loginFormInputPassword">Contraseña</label>!-->

                <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
                <%= f.label :password %>
              </div>
              <div class="remember-forgot-password row no-gutters align-items-center justify-content-between pt-4">
                <div class="form-check remember-me mb-4">
                  <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" aria-label="No cerrar sesión">
                    <span class="checkbox-icon"></span><span class="form-check-description">No cerrar sesión</span>
                  </label>

                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>
                </div>
                <a class="forgot-password text-secondary mb-4" href="#">Olvidaste tu contraseña?</a>
              </div>
              <%= f.submit "Ingresar", class:"submit-button btn btn-block btn-secondary my-4 mx-auto" %>
              
            <!-- </form> !-->
            <% end %>
            <div class="register d-flex flex-column flex-sm-row align-items-center justify-content-center mt-8 mb-6 mx-auto"><span class="text mr-sm-2">¿No tienes cuenta?</span><a class="link text-secondary" href="#">Crear cuenta            </a></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>


